{
  "id": "legendary",
  "name": "Legendary: A Marvel Deck Building Game",
  "publisher": "Upper Deck",
  "version": "1.0.0",
  "iconData": "game-icons/legendary.jpg",
  "elementTypes": {
    "heroes": {
      "id": "heroes",
      "name": "Hero",
      "pluralName": "Heroes",
      "isRequired": true,
      "properties": ["team", "types"]
    },
    "villains": {
      "id": "villains", 
